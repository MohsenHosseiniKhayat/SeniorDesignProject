<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fffafafa"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Activities.RecipeDetailActivity"
    tools:showIn="@layout/activity_recipe_detail">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="26dp"
        android:textStyle="bold|italic"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:id="@+id/recipeNameTextView"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:id="@+id/recipeImageView"/>

    <GridView
        android:layout_width="match_parent"
        android:background="#FFF6E1E8"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:textSize="50dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:id="@+id/ingredientsGridView">
    </GridView>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:background="#e2f3f7"
        android:id="@+id/cookingStepsRecyclerView"
        android:layout_weight="3">
    </android.support.v7.widget.RecyclerView>


</LinearLayout>