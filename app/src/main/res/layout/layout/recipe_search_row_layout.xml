<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView


    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:id="@+id/card_view"
    android:layout_height="250dp"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:layout_gravity="center"
    android:layout_marginTop="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginBottom="8dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_color">


        <ImageView
            android:id="@+id/recipeImageView"
            android:layout_width="match_parent"
            android:layout_height="150dp"

            />


        <TextView
            android:id="@+id/recipeNameTextView"
            android:layout_width="100dp"
            android:layout_height="33dp"
            android:layout_above="@+id/recipeRatingBar"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="TextView"
            android:textAllCaps="false"
            android:textColor="@color/cardview_dark_background"
            android:textSize="26dp"
            android:textStyle="bold|italic" />


        <TextView
            android:id="@+id/recipeDescriptionTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/recipeCaloriesTextView"
            android:layout_marginBottom="49dp"
            android:text="TextView"
            android:textStyle="bold"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/recipeCaloriesTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="19dp"
            android:layout_marginStart="24dp"
            android:text="TextView"
            android:textStyle="bold"
            android:visibility="invisible" />

        <RatingBar
            android:id="@+id/recipeRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:progressTint="@color/colorPrimaryDark"
            android:stepSize="1" />

        <TextView
            android:id="@+id/recipeCompletionTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/recipeDescriptionTextView"
            android:layout_alignParentStart="true"
            android:layout_marginStart="16dp"
            android:text="TextView"
            android:textStyle="bold"
            android:visibility="invisible" />


    </RelativeLayout>
</android.support.v7.widget.CardView>