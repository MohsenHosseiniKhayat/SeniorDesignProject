<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent">

  <TextView
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:textStyle="bold"
      android:layout_weight="1"
      android:textSize="24sp"
      android:textAlignment="center"
      android:layout_marginTop="40dp"
      android:id="@+id/signInPromptTextView"

      android:layout_marginLeft="50dp"
      android:layout_marginRight="50dp"
      android:text="Sign in to use Delicious"/>

    <com.rengwuxian.materialedittext.MaterialEditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/pantry_listening_color1"
        android:id="@+id/userNameEditText"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_weight="2"
        android:hint="Username"
        app:met_floatingLabelAnimating="true"
        app:met_errorColor="@color/pantry_listening_color1"
        app:met_baseColor="@color/pantry_listening_color2"
        app:met_clearButton="true"
        app:met_maxCharacters="20"
        app:met_minCharacters="6"
        app:met_underlineColor="@color/pantry_listening_color2"
        android:textColorHint="@color/pantry_listening_color2"
        android:layout_marginBottom="20dp"/>


  <com.rengwuxian.materialedittext.MaterialEditText
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="2"
      android:layout_marginLeft="50dp"
      android:layout_marginRight="50dp"
      app:met_floatingLabelAnimating="true"
      app:met_errorColor="@color/pantry_listening_color1"
      app:met_baseColor="@color/pantry_listening_color2"
      app:met_clearButton="true"
      app:met_maxCharacters="20"
      app:met_minCharacters="6"
      app:met_underlineColor="@color/pantry_listening_color2"
      android:hint="Password"
      android:textColorHint="@color/pantry_listening_color2"
      android:id="@+id/passwordEditText"
      android:layout_marginBottom="40dp"/>

    <com.shaishavgandhi.loginbuttons.GoogleButton
        android:id="@+id/signInButton"
        android:layout_width="match_parent"
        android:layout_weight="1"
        app:roundedCorner="true"
        app:transparentBackground="false"
        app:roundedCornerRadius="50dp"
        android:text="Sign In"
        android:textAllCaps="false"
        android:textColor="@color/pantry_listening_color2"
        app:iconSize="0dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:layout_height="0dp"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="1"
        android:textSize="18sp"
        android:textAlignment="center"
        android:text="Or \n sign in using the following:" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
        </LinearLayout>

        <com.shaishavgandhi.loginbuttons.GoogleButton
            android:id="@+id/googleSignInButton"
            android:layout_width="0dp"
            android:layout_weight="2"
            app:roundedCorner="true"
            app:transparentBackground="false"
            app:roundedCornerRadius="200dp"
            android:textAllCaps="false"
            android:textColor="@color/pantry_listening_color2"
            app:iconSize="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25">
        </LinearLayout>

        <com.shaishavgandhi.loginbuttons.FacebookButton
            android:id="@+id/facebookSignInButton"
            android:layout_width="0dp"
            android:layout_weight="2"
            app:roundedCornerRadius="100dp"
            android:textAllCaps="false"
            android:textColor="@color/white_color"
            app:iconSize="30dp"
            app:roundedCorner="true"
            app:transparentBackground="false"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25">
        </LinearLayout>

        <com.shaishavgandhi.loginbuttons.TwitterButton
            android:id="@+id/twitterSignInButton"
            android:layout_width="0dp"
            app:roundedCornerRadius="100dp"
            app:roundedCorner="true"
            app:transparentBackground="false"
            android:textAllCaps="false"
            android:textColor="@color/white_color"
            app:iconSize="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="2"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.25"></LinearLayout>





</LinearLayout>